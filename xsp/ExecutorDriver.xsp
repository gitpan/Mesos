%module{Mesos};
#include <ExecutorDriver.hpp>
#include <XS/MesosUtils.hpp>
#include <string>
#include <vector>


%name{Mesos::ExecutorDriver} class mesos::perl::ExecutorDriver
{

%{

static void
xs_init(SV* self)
    PPCODE:
        if (SvROK(self) && SvTYPE(SvRV(self)) == SVt_PVHV) {
            mesos::perl::ExecutorDriver* driver = new mesos::perl::ExecutorDriver();
            sv_magic(SvRV(self), Nullsv, PERL_MAGIC_ext,
                             (const char*) driver, 0);
        }

mesos::perl::MesosChannel*
mesos::perl::ExecutorDriver::_channel()
    CODE:
        RETVAL = THIS->get_proxy_channel()->share();
    OUTPUT:
        RETVAL

%}

// for now, dont call the c++ destructor
// has a nasty habit of segfaulting(not a perl problem, purely a mesos issue)
//~ExecutorDriver();

Status start();

Status stop();

Status abort();

Status sendStatusUpdate(mesos::TaskStatus status);

Status sendFrameworkMessage(std::string data);

Status status()
    %code{% RETVAL = THIS->status_; %};

};
